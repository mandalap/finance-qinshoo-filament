# =============================================
# KONFIGURASI .ENV UNTUK HOSTING
# =============================================
# Copy file ini ke .env di hosting Anda
# Sesuaikan nilai-nilai berikut dengan hosting Anda

# =============================================
# APPLICATION SETTINGS
# =============================================
APP_NAME="Keuangan Filament"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# =============================================
# LOGGING
# =============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================
# DATABASE CONFIGURATION
# =============================================
# Sesuaikan dengan database hosting Anda
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# =============================================
# SESSION CONFIGURATION (PENTING UNTUK FIX 403!)
# =============================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# =============================================
# CACHE & QUEUE
# =============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=file
CACHE_PREFIX=

# =============================================
# MAIL CONFIGURATION
# =============================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================
# SANCTUM (untuk API authentication)
# =============================================
SANCTUM_STATEFUL_DOMAINS=yourdomain.com

# =============================================
# VITE
# =============================================
VITE_APP_NAME="${APP_NAME}"

# =============================================
# CATATAN PENTING:
# =============================================
# 1. Ganti 'yourdomain.com' dengan domain hosting Anda
# 2. Ganti 'YOUR_APP_KEY_HERE' dengan APP_KEY dari local
#    (atau generate baru dengan: php artisan key:generate)
# 3. Isi database credentials dengan benar
# 4. Pastikan SESSION_DOMAIN sama dengan domain Anda
# 5. Set APP_DEBUG=false untuk production
# 6. Set SESSION_SECURE_COOKIE=true jika menggunakan HTTPS
# 7. Jangan commit file .env ke Git!
